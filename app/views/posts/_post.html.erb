<div class = "post-container", id = <%= post.id.to_s %>>
    <div class = 'author'>
        <%= post.author.full_name %>
    </div>
    <div class = 'content'>
        <%= post.content %>
    </div>
    <div class = '<%= post.id.to_s %>-likes'>
        <%= render 'likes/likes', likeable: post %>
    </div>
    <% if post.author == current_user %>
        <div class = 'delete-container'>
            <%= render 'posts/delete_form', post: post %>
        </div>
    <% end %>
    <%= render 'comments/create_form', commentable: post %>
    <div class = '<%= post.id.to_s %>-comments'>
        <%= render post.comments %>
    </div>
</div>

